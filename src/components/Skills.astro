---
import styles from './Skills.module.scss';
import { Icon } from 'astro-icon/components';

const skills = [
  { name: 'TypeScript', icon: 'simple-icons:typescript' },
  { name: 'React', icon: 'simple-icons:react' },
  { name: 'Next.js', icon: 'simple-icons:nextdotjs' },
  { name: 'PHP', icon: 'simple-icons:php' },
  { name: 'Laravel', icon: 'simple-icons:laravel' },
  { name: 'Ghostty', icon: 'simple-icons:gnometerminal' },
  { name: 'Git', icon: 'simple-icons:git' },
  { name: 'PostgreSQL', icon: 'simple-icons:postgresql' },
  { name: 'AWS', icon: 'simple-icons:amazonwebservices' },
  { name: 'VS Code', icon: 'simple-icons:visualstudiocode' },
];
---

<section class="section" id="skills">
  <p class="section-overline">Some of my favourite</p>
  <h2 class="section-heading">Tools</h2>
  <div class={styles.grid}>
    {
      skills.map((skill) => (
        <div class={styles.skill}>
          <Icon name={skill.icon} class={styles.icon} />
          <span class={styles.name}>{skill.name}</span>
        </div>
      ))
    }
  </div>
</section>
