---
import styles from './ProjectCard.module.scss';
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  description: string;
  techStack: string[];
  image?: string;
  link?: string;
  status?: string;
}

const { title, description, techStack, image, link, status } = Astro.props;
---

<article class={styles.card}>
  <div class={styles.imageWrapper}>
    {
      image ? (
        <img src={image} alt={title} class={styles.image} />
      ) : (
        <div class={styles.placeholder}>
          <Icon name="lucide:code" />
        </div>
      )
    }
  </div>
  <div class={styles.content}>
    <div class={styles.titleRow}>
      <h3 class={styles.title}>{title}</h3>
      {
        link ? (
          <a
            href={link}
            class={styles.externalLink}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="View project"
          >
            <Icon name="lucide:external-link" />
          </a>
        ) : status ? (
          <div class={styles.statusIcon} aria-label="In development">
            <Icon name="lucide:hammer" />
          </div>
        ) : null
      }
    </div>
    <p class={styles.description}>{description}</p>
    <ul class={styles.techStack}>
      {techStack.map((tech) => <li class={styles.tech}>{tech}</li>)}
    </ul>
  </div>
</article>
