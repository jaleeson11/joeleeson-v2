---
import styles from './Projects.module.scss';
import ProjectCard from './ProjectCard.astro';

// Placeholder data - will be replaced with actual data from src/data/projects.ts
const projects = [
  {
    title: 'CutMy Product Visualiser',
    description:
      'Interactive product visualisation tool for custom materials and configurations.',
    techStack: ['WordPress', 'PHP', 'JavaScript', 'CSS'],
    image: '/images/projects/cutmy-placeholder.jpg',
    link: 'https://example.com',
  },
  {
    title: 'Project Two',
    description: 'Placeholder for second project from existing portfolio.',
    techStack: ['React', 'TypeScript', 'Node.js'],
    image: '/images/projects/project-placeholder.jpg',
    link: 'https://example.com',
  },
  {
    title: 'Project Three',
    description: 'Placeholder for third project from existing portfolio.',
    techStack: ['Magento', 'PHP', 'MySQL'],
    image: '/images/projects/project-placeholder.jpg',
    link: 'https://example.com',
  },
];
---

<section class={styles.projects} id="projects">
  <p class="section-overline">Things I've built</p>
  <h2 class={styles.heading}>Featured Projects</h2>
  <div class={styles.grid}>
    {
      projects.map((project) => (
        <ProjectCard
          title={project.title}
          description={project.description}
          techStack={project.techStack}
          image={project.image}
          link={project.link}
        />
      ))
    }
  </div>
</section>
