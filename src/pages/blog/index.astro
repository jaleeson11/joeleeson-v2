---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import BlogCard from '../../components/BlogCard.astro';
import BackLink from '../../components/BackLink.astro';
import styles from '../../components/BlogPage.module.scss';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout
  title="Blog | Joe Leeson"
  description="Articles about software engineering, web development, and technology."
>
  <div class={styles.wrapper}>
    <main class={styles.main}>
      <BackLink href="/" label="Back to home" />
      <header class={styles.header}>
        <h1 class={styles.title}>Blog</h1>
        <p class={styles.description}>
          Thoughts on software engineering, web development, and technology.
        </p>
      </header>
      <div class={styles.grid}>
        {
          posts.map((post) => (
            <BlogCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              slug={post.slug}
              tags={post.data.tags}
            />
          ))
        }
      </div>
      <Footer />
    </main>
  </div>
</Layout>
