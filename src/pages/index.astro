---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Skills from '../components/Skills.astro';
import Projects from '../components/Projects.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Joe Leeson - Software Developer"
  description="Software developer based near London, UK. Building modern, performant web applications with a focus on clean code and exceptional user experiences."
>
  <div class="page-wrapper">
    <Hero />
    <main>
      <About />
      <Skills />
      <Projects />
      <Footer />
    </main>
  </div>
</Layout>

<script>
  // Fade in main content after hero animation completes
  // Hero animation: typing (1.1s) + reveal elements (800ms + 500ms for last element)
  // Total: ~2.4s
  const mainElement = document.querySelector('main');

  if (mainElement) {
    setTimeout(() => {
      mainElement.classList.add('revealed');
    }, 2400);
  }
</script>

<style lang="scss">
  @use '../styles/breakpoints' as *;

  .page-wrapper {
    position: relative;
    display: flex;
    max-width: 1200px;
    min-height: 100vh;
    padding: 0 calc(var(--spacing-xl));
    margin: 0 auto;
    gap: var(--spacing-lg);
  }

  .page-wrapper::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
  }

  .page-wrapper::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: 0.15;
    pointer-events: none;
    z-index: 1;
  }

  main {
    flex: 1;
    overflow-y: auto;
    position: relative;
    z-index: 2;
    opacity: 0;
    transition: opacity 0.8s ease;
  }

  main.revealed {
    opacity: 1;
  }

  @include laptop {
    .page-wrapper {
      flex-direction: column;
      gap: 0;
    }
  }

  @include tablet {
    .page-wrapper {
      padding: 0 var(--spacing-lg);
    }
  }
</style>
