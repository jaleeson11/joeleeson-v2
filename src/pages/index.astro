---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Skills from '../components/Skills.astro';
import Projects from '../components/Projects.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Joe Leeson - Software Developer"
  description="Software developer based near London, UK. Building modern, performant web applications with a focus on clean code and exceptional user experiences."
>
  <div class="page-wrapper">
    <Hero />
    <main>
      <About />
      <Skills />
      <Projects />
      <Footer />
    </main>
  </div>
</Layout>

<script>
  // Fade in main content after hero animation completes
  // Hero animation: typing (1.1s) + reveal elements (800ms + 500ms for last element)
  // Total: ~2.4s
  const mainElement = document.querySelector('main');

  if (mainElement) {
    setTimeout(() => {
      mainElement.classList.add('revealed');
    }, 2400);
  }
</script>

<style lang="scss">
  @use '../styles/breakpoints' as *;

  .page-wrapper {
    position: relative;
    display: flex;
    max-width: 1200px;
    min-height: 100vh;
    padding: 0 calc(var(--spacing-xl));
    margin: 0 auto;
    gap: var(--spacing-lg);
  }

  main {
    flex: 1;
    overflow-y: auto;
    position: relative;
    z-index: 2;
    opacity: 0;
    transition: opacity 0.8s ease;
  }

  main.revealed {
    opacity: 1;
  }

  @include laptop {
    .page-wrapper {
      flex-direction: column;
      gap: 0;
    }
  }

  @include tablet {
    .page-wrapper {
      padding: 0 var(--spacing-lg);
    }
  }
</style>
